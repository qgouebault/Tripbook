<div class="container panel">
  <p id="notice"><%= notice %></p>
  
  <center>
    <%= image_tag(@travel_log.avatar.url(:small)) %>
  </center>
  
  <h2>
    <%= @travel_log.title %>
  </h2>
  
  <blockquote>
      <footer><%= @travel_log.user %></footer>
  </blockquote>
  
  <p>
    <%= @travel_log.description %>
  </p>
  
  <hr>
  
  <center>
  <%= link_to new_jour_path, class: 'btn btn-success' do %>
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
  <% end %>
</center>
  
  <%= link_to 'Edit', edit_travel_log_path(@travel_log) %>
</div>