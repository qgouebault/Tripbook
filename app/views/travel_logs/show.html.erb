<% if notice %>
    <div class="alert alert-success" role="alert"><p id="notice"><%= notice %></p></div>
<% end %>
<div class="container panel">
  <br />
  <center class="imgpanel">
    <%= image_tag(@travel_log.avatar.url(:medium)) %>
  </center>
  
  <h2>
    <%= @travel_log.title %>
  </h2>
  
  <blockquote>
      <footer><%= @travel_log.user %></footer>
  </blockquote>
  
  <p>
    <%= @travel_log.description %>
  </p>
  <br />
  <div class='container'>
    <% @jours.each_slice(2) do |jour| %>
    <div class="row">
      <% jour.each do |jouraffich| %>
      <div class="col-sm-12 col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <center><%= image_tag(jouraffich.avatar.url(:medium)) %></center>
          </div>
          <div class="panel-body">
            <h3><%= jouraffich.name %></h3>
            <p><%= jouraffich.date %></p>
            <p><%= jouraffich.description %></p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
  
<br />
  
  <center><%= link_to 'Edit', edit_travel_log_path(@travel_log), {:class => "btn btn-info dropdown-toggle"} %></center>
  <br />
</div>