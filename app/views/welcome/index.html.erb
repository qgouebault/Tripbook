<div class='container'>
  <% @travel_logs.each_slice(2) do |travel_log| %>
  <div class="row">
    <% travel_log.each do |travel| %>
    <div class="col-sm-12 col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <center><%= image_tag(travel.avatar.url(:small)) %></center>
        </div>
        <div class="panel-body">
          <h3><%= travel.title %></h3>
          <p><%= travel.description %></p>
          <p><%= link_to 'Plus...', travel %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <% end %>
</div>
