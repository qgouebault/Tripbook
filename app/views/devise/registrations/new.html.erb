<div class="container">
  <h2>Cr√©er un compte</h2>
  
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
  
    <div class="form-inputs">
      <div class="row">
        <%= f.input :firstname, required: true, wrapper_html: {class:"col-sm-6"} %>
        <%= f.input :lastname , required: true, wrapper_html: {class:"col-sm-6"} %>
      </div>
      <div class="row">
        <%= f.input :birthdate, input_html: {type:"date"}, wrapper_html: {class:"col-sm-6"} %>
      </div>
      <div class="row">
        <%= f.input :username , required: true, wrapper_html: {class:"col-sm-6"} %>
        <%= f.input :email, required: true, autofocus: true, wrapper_html: {class:"col-sm-12"} %>
      </div>
      <div class="row">
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), wrapper_html: {class:"col-sm-6"} %>
        <%= f.input :password_confirmation, required: true, wrapper_html: {class:"col-sm-6"} %>
      </div>
    </div>
  
    <div class="form-actions">
      <%= f.button :submit, "Sign in" %>
    </div>
  <% end %>
</div>
